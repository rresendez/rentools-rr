<!DOCTYPE html>
<html>
<head>
  <% include partials/head %>
</head>
<body>
  <header>
    <% include partials/header %>
  </header>

  <h1>Item List</h1>

  <% if(items.length<1){%>
  <h1>Sowy, no items found :( </h1>
  <% } %>
  <% items.forEach(function(item){%>
    <h2 style="text-align:center;">Item name: <%=item.name %></h2>
    <img border="100" style="max-width:800px; border:5px solid black;" src="<%=item.image %>" alt="" ></br>
    <b>Description: </b>
    <p><%=item.description%></p>
    <form method="post" action="/rent">
    <input type="hidden" name="owner" value=<%=item.ownerid%>>
    <input type="hidden" name="rent" value=<%=item._id %>>
    <% if(item.isAvailable==true){%>
    <button type="submit">Rent</button>
    <% } %>
  </form>
  <% });%>
  <a href="/"><h1>Back</h1> </a>
  <footer class="footertwo">
    <% include partials/footer %>
  </footer>
</body>
</html>
